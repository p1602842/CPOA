<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModificationStaff">
   <center>
      <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab closable="false" text="Arbitres">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <left>
                        <TableView fx:id="arbitresInitialContainer" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                          <columns>
                            <TableColumn editable="false" prefWidth="75.0" text="ID" />
                            <TableColumn editable="false" prefWidth="75.0" text="Nom" />
                              <TableColumn editable="false" prefWidth="75.0" text="Nb chaise" />
                          </columns>
                        </TableView>
                     </left>
                     <center>
                        <VBox BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="ajouterArbitreChaise" mnemonicParsing="false" onAction="#ajouterArbitreChaise" text="Ajouter Arbitre Chaise &gt;" />
                              <Button fx:id="ajouterArbitreLigne" mnemonicParsing="false" onAction="#ajouterArbitreLigne" text="Ajouter Arbitre Ligne &gt;" />
                              <Button fx:id="retirerArbitre" mnemonicParsing="false" onAction="#retirerArbitre" text="&lt; Retirer" />
                           </children>
                        </VBox>
                     </center>
                     <right>
                        <TreeTableView fx:id="arbitresFinalContainer" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                          <columns>
                            <TreeTableColumn editable="false" prefWidth="75.0" text="ID" />
                            <TreeTableColumn prefWidth="75.0" text="Nom" />
                          </columns>
                        </TreeTableView>
                     </right>
                  </BorderPane>
               </content>
          </Tab>
          <Tab closable="false" text="Ramasseurs">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <left>
                        <TableView fx:id="ramasseursInitialContainer" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
                     </left>
                     <center>
                        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="ajouterRamasseurs" mnemonicParsing="false" onAction="#ajouterRamasseurs" text="Ajouter &gt;" />
                              <Button fx:id="retirerRamasseurs" mnemonicParsing="false" onAction="#retirerRamasseurs" text="&lt; Retirer" />
                           </children>
                        </VBox>
                     </center>
                     <right>
                        <TableView fx:id="ramasseursFinalContainer" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
                     </right>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="matchLabel" text="Match nÂ° -  VS " />
            <Label fx:id="horaireEmplacement" text="Terrain, Jour - Horaire" />
         </children>
      </VBox>
   </top>
</BorderPane>
